{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "sbt: compile",
      "type": "shell",
      "command": "sbt",
      "args": ["compile"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": "$scala"
    },
    {
      "label": "sbt: test",
      "type": "shell",
      "command": "sbt",
      "args": ["test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": "$scala"
    },
    {
      "label": "sbt: run",
      "type": "shell",
